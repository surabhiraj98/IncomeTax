<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.incometax.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#899188"
        android:textSize="18dp"
        android:text="Taxable Income"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bb0988e9"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/taxinc"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#899188"
        android:textSize="18dp"
        android:text="Tax to be paid"
        android:textStyle="italic"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bb0988e9"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/tax"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SHARE"
        android:layout_marginTop="8dp"
        android:id="@+id/share"
        android:backgroundTint="#bb23af1c"/>

</LinearLayout>